
@{
    ViewBag.Title = "Index";
}

<html>
<head>
    <h2>Calculator</h2>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>

<body>


    @using (Html.BeginForm("Index", "Calculate", FormMethod.Get))
    {
        <div class="container">
            <div class="form-inline">
                <div class="form-group row">
                    <label >Value 1</label>
                    @Html.TextBox("Value1", null, htmlAttributes: new { @class = "form-control" })
                 </div>
                <div class="form-group row" style="margin-left:20px">
                    <label>Value 2</label>
                    @Html.TextBox("Value2", null, htmlAttributes: new { @class = "form-control" })
                </div> 
                <div class="form-group row" style="margin-left:20px;margin-top:20px">
                    <input type="submit" name="submit" class="btn btn-primary" value="Add" />
                    <input type="submit" name="submit" class="btn btn-primary" value="Subract" />
                    <input type="submit" name="submit" class="btn btn-primary" value="Multiply" />
                    <input type="submit" name="submit" class="btn btn-primary" value="Divide" />
                </div>
            </div>
            <div class="form-group row" style="margin-top:20px">
                <label>@ViewBag.Output </label>
            </div>
        </div>

    }

</body>
</html>




